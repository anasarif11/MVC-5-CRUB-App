@model IEnumerable<GulAhmedShop.Models.SliderImages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_fe.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.imagePath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imageHeading)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
   

            <img src="@item.imagePath" alt="Alternate Text" style="width:40px;height:50px;"/>

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.imageHeading)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
